<%= render 'shared/page_title', title: "All Chefs" %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to "Recipes", recipes_path %>
  </li>
  <li class="active">
    <%= link_to "Chefs", chefs_path %>
  </li>
</ul>

<div class="row" >
  <div class="col-md-4 col-md-offset center">
    <!-- Here we do not need to mention @chefs because we only have one variable and automatically WILL_PIGNATE will use it -->
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
<div class="row" >
  <div class="col-md-4 col-md-offset center">
  <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
  <p>
    <h5>Chef name: <%= chef.chefname %></h5>
  </p>
  </div>
</div>
<% end %>
